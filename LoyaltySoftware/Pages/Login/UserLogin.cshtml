@page
@model LoyaltySoftware.Pages.Login.loginModel
@{ }

<h1> Login Portal</h1>
<br/>
<div class="row">
 <div class="col-md-4">
  <form method="post">

   <div class="form-group">
    <label class="control-label">Username</label>
    <input type="text" asp-for="UserAccount.Username" class="form-control" />
    <p style="color: red">@Model.UsernameMessage</p>
   </div>

   <div class="form-group">
    <label asp-for="UserAccount.Password" class="control-label">Password</label>
    <input asp-for="UserAccount.Password" type="password" class="form-control" />
    <p style="color: red">@Model.PasswordMessage</p>
   </div>


   <div>
    <input type="submit" value="Login" class="btn btn-primary" />
   </div>

  </form>

  
 </div>
</div>

